<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
    @if (String.IsNullOrWhiteSpace(ViewData["LogoPath"].ToString()))
    {
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">@ViewData["SiteName"]</a>
    }
    else
    {
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img alt="@ViewData["SiteName"]" src="@ViewData["LogoPath"]" /></a>
    }
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav mr-auto">
            <li id="homeLink" class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
            <li id="blogHomeLink" class="nav-item"><a class="nav-link" asp-area="" asp-controller="Blog" asp-action="Index">Blog</a></li>
            @await Html.PartialAsync("_LoginPartial")
        </ul>
        <form method="get" role="search" asp-controller="Blog" asp-action="Search" class="form-inline mt-2 mt-md-0">
            <input class="form-control mr-sm-2" id="searchTerm" name="searchTerm" placeholder="Search Posts...">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="fas fa-search"></i> Search</button>
        </form>
    </div>
</nav>