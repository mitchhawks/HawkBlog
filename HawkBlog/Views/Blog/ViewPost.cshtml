@model HawkBlog.Models.Post
@{
    ViewData["Title"] = Model.PostTitle;
}

<div class="blog-post">
    <h2 class="blog-post-title">@Html.DisplayFor(model => model.PostTitle)</h2>
    <p class="blog-post-meta">@Model.PostDatePub.ToString("D") in <a>@Html.DisplayFor(model => model.PostCategory.CatName)</a></p>

    @Html.Raw(Model.PostContent)

</div><!-- /.blog-post -->
<small>Last modified on @Model.PostLastModified.ToString("D")</small>