@model UserViewModel
@using HawkBlog.Models

@{
    Layout = "_DashLayout";
    ViewData["Title"] = "New User";
}

<h2>Add User</h2>
<form asp-action="Create" role="form">
    <div class="modal-body form-horizontal">
        <div class="row">
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span><br />
            </div><br />
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span><br />
            </div><br />
            <div class="form-group">
                <label asp-for="ApplicationRoleId" class="col-lg-3 col-sm-3 control-label"></label>
                <div class="col-lg-6">
                    <select asp-for="ApplicationRoleId" asp-items="@Model.ApplicationRoles" class="form-control">
                        <option>Please select</option>
                    </select>
                </div>
            </div><br />
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" /><br />
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" /><br />
            </div>
        </div>
    </div>
    <a asp-action="Index" class="btn btn-default">Cancel</a>
    <button class="btn btn-success" type="submit">Submit</button>
</form>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            $('#userManLink').addClass('active');
        });
    </script>
}
